
<form>
    <div class="form-row">
        <div class="form-group">
            <label for="name">Backup name</label>
            <input type="text" class="form-control" id="name" placeholder="my backup">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="include-namespace">Include namespaces</label>
            <input type="text" class="form-control" id="include-namespace" placeholder="my namespace">
        </div>
        <div class="form-group col-md-6">
            <label for="include-resources">Include resources</label>
            <input type="text" class="form-control" id="include-resources" placeholder="my resource">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="exclude-namespace">Exclude namespaces</label>
            <input type="text" class="form-control" id="exclude-namespace" placeholder="other namespace">
        </div>
        <div class="form-group col-md-6">
            <label for="exclude-resources">Exclude resources</label>
            <input type="text" class="form-control" id="exclude-resources" placeholder="other resource">
        </div>
    </div>

        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="retention">Backup retention</label>
            <select id="retention" class="form-control">
                <option selected>30 days</option>
                <option>60 days</option>
                <option>90 days</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="setting">Settings</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="snapshot" id="snapshot" value="true">
                <label class="form-check-label" for="snapshot">Snapshot</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="cluster" id="cluster" value="true">
                <label class="form-check-label" for="cluster">Include cluster resource</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="restic" id="restic" value="true">
                <label class="form-check-label" for="restic">Default volume to Restic</label>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="exclude-namespace">Backup labels</label>
            <input type="text" class="form-control" id="backup-labels" placeholder="Labels">
        </div>
        <div class="form-group col-md-6">
            <label for="exclude-resources">Use selector</label>
            <input type="text" class="form-control" id="use-selector" placeholder="Selectors">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="backup-location">Backup location</label>
            <select id="backup-location" class="form-control">
                <option selected>Default</option>
                <option>Second</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="snapshot-location">Snapshot location</label>
            <select id="snapshot-location" class="form-control">
                <option selected>Default</option>
                <option>Second</option>
            </select>
        </div>
    </div>
</form>